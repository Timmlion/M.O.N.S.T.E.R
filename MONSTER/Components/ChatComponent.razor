<MudPaper Class="pa-2 ma-2" Elevation="3">
    <MudGrid align-center>
        <MudItem xs="12">
            <MudPaper Class="overflow-x-scroll" Style="display: flex; flex-direction: column-reverse" Outlined="true" Width="100%" Height="400px">
                @foreach(ChatElement ce in _chatElements)
                {
                <MudAlert Severity="Severity.Normal" 
                                NoIcon="true" 
                                Variant="@ce.Variant" 
                                ContentAlignment="@ce.HorizontalAlignment"
                                >@ce.Content</MudAlert>
                }
            </MudPaper>
        </MudItem>
        <MudItem xs="12">
            <MudPaper Class="d-flex align-center flex-grow-1 gap-4" Elevation="0">
                <MudItem xs="12">
                    <MudTextField Immediate="true" @bind-Value="_inputField" @onkeydown="@SendMsgAsync" Label="message" Variant="Variant.Outlined"></MudTextField>
                </MudItem>
            </MudPaper>
        </MudItem>
     </MudGrid>
</MudPaper>


