@inherits LayoutComponentBase

<MudThemeProvider @ref="@_mudThemeProvider" @bind-IsDarkMode="@_isDarkMode"/>
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="25">
        <MudToolBar Class="d-flex align-content-end flex-wrap flex-grow-1 gap-4 ">
                <MudIconButton Icon="@Icons.Material.Outlined.Edit" Color="Color.Warning" />
                <MudIconButton Icon="@Icons.Material.Outlined.Add" Color="Color.Warning" />
                <MudIconButton Icon="@Icons.Material.Outlined.Settings" Color="Color.Warning" />            
        </MudToolBar>
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _isDarkMode;
    private MudThemeProvider _mudThemeProvider;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _isDarkMode = await _mudThemeProvider.GetSystemPreference();
            StateHasChanged();
        }
    }
}